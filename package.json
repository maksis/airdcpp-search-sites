{
  "name": "airdcpp-search-sites",
  "version": "1.0.0-beta.2",
  "description": "Extension for adding configurable context menu items that will perform web searches for files/directories",
  "license": "MIT",
  "author": {
    "name": "maksis"
  },
  "keywords": [
    "airdcpp",
    "airdcpp-extensions",
    "airdcpp-extensions-public"
  ],
  "bugs": "https://github.com/maksis/airdcpp-search-sites/issues/",
  "repository": {
    "type": "git",
    "url": "https://github.com/maksis/airdcpp-search-sites/"
  },
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production webpack",
    "clean": "rimraf dist",
    "start": "node devtools/watch.js ../dist/main.js",
    "prepublishOnly": "npm run build",
    "webpack": "webpack",
    "test": "jest"
  },
  "devDependencies": {
    "airdcpp-apisocket": "^2.4.1",
    "airdcpp-extension": "^1.4.0",
    "airdcpp-extension-settings": "^1.2.0",
    "core-js": "^3.8.1",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "main": "dist/main.js",
  "airdcpp": {
    "apiVersion": 1,
    "minApiFeatureLevel": 5
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "moduleNameMapper": {
      "(src/.*)$": "<rootDir>/$1"
    },
    "modulePaths": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ]
  }
}
